  <script>
    // Add/adjust entries as your site grows
    const PAGES = [
      { href: "dashboard.html", title: "Production Dashboard", desc: "Executive view • modules • quick actions", tag: "ENTRY", tone:"navy" },
      { href: "fabric-dpp.html", title: "Fabric DPP", desc: "Fabrics table + CO₂ sorting • Supabase live", tag: "LIVE", tone:"green" },
      { href: "fibre-dpp.html", title: "Fibre DPP", desc: "Fibre library + CO₂ (proxy monthly chart ok)", tag: "LIVE", tone:"green" },
      { href: "garment.html", title: "Garment DPP", desc: "Garment module (if present) — demo content", tag: "DEMO", tone:"orange" },
      { href: "finishingdpp.html", title: "Finishing DPP", desc: "Process view — demo/sim model", tag: "DEMO", tone:"orange" },
      { href: "chemicals.html", title: "Chemicals & Dyes", desc: "Compliance + risk narrative", tag: "RISK", tone:"red" }
    ];

    const grid = document.getElementById("grid");

    // Filter out missing files gracefully (works locally only; on Pages, it will just show all)
    function card(p){
      const a = document.createElement("a");
      a.className = "card";
      a.href = p.href;
      a.innerHTML = `
        <div class="k">
          <div class="h">${p.title}</div>
          <span class="tag ${p.tone||"navy"}">${p.tag||"OPEN"}</span>
        </div>
        <div class="d">${p.desc||""}</div>
      `;
      return a;
    }

    PAGES.forEach(p => grid.appendChild(card(p)));
  </script>
